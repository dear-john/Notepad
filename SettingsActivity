package com.spring_ballet.notepad;

import android.content.DialogInterface;
import android.content.Intent;
import android.os.Bundle;
import android.support.v7.app.AlertDialog;
import android.support.v7.app.AppCompatActivity;
import android.view.View;
import android.widget.TextView;
import android.widget.Toast;

public class SettingsActivity extends AppCompatActivity implements View.OnClickListener {

    private static final int ORDER_TIME_UP = 1;
    private static final int ORDER_TIME_DOWN = 2;
    private static final int ORDER_LEVEL_UP = 3;
    private static final int ORDER_LEVEL_DOWN = 4;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_settings);
        TextView tv_order = (TextView) findViewById(R.id.tv_order);
        TextView tv_wordSize = (TextView) findViewById(R.id.tv_wordSize);
        tv_order.setOnClickListener(this);
        tv_wordSize.setOnClickListener(this);
    }

    @Override
    public void onClick(View view) {
        switch (view.getId()) {
            case R.id.tv_order:
                String[] items = new String[]{"修改时间降序","修改时间升序", "重要等级降序","重要等级升序"};
                AlertDialog.Builder builder = new AlertDialog.Builder(SettingsActivity.this);
                builder.setTitle("排序方式：");
                builder.setItems(items, new DialogInterface.OnClickListener() {
                    @Override
                    public void onClick(DialogInterface dialogInterface, int i) {
                        Intent intent = new Intent();
                        switch (i) {
                            case 0:
                                intent.putExtra("order", ORDER_TIME_DOWN);
                                break;
                            case 1:
                                intent.putExtra("order", ORDER_TIME_UP);
                                break;
                            case 2:
                                intent.putExtra("order", ORDER_LEVEL_DOWN);
                                break;
                            case 3:
                                intent.putExtra("order", ORDER_LEVEL_UP);
                                break;
                            default:
                                break;
                        }
                        setResult(RESULT_OK,intent);
                        finish();
                    }
                });
                builder.show();
                break;
            case R.id.tv_wordSize:
                Toast.makeText(SettingsActivity.this, "wordSize", Toast.LENGTH_SHORT).show();
                break;
            default:
                break;
        }
    }
}
